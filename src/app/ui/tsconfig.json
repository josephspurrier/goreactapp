{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        //"target": "es5",
        //"allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "~/*": [
                "*"
            ],
        },
        "outDir": "./dist/",
        "noImplicitAny": true,
        //"module": "es6",
        "allowJs": false,
        "checkJs": false,
    },
    "include": [
        "src/**/*",
        ".storybook/**/*",
        "test/**/*",
        "node_modules/cypress/**/*",
    ]
}